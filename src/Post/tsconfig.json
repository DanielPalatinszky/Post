{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "lib": [ "es2015", "dom" ]
  },
  "typeAcquisition": {
    "enable": true
  },
  "exclude": [
    "node_modules"
  ]
}
